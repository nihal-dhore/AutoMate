generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  mates     Mate[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mate {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  Trigger   Trigger?
  Actions   Action[]
  MateRuns  MateRun[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Trigger {
  id                 String           @id @default(cuid())
  mateId             String           @unique
  availableTriggerId String
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  mate               Mate             @relation(fields: [mateId], references: [id])
  type               AvailableTrigger @relation(fields: [availableTriggerId], references: [id])
}

model Action {
  id        String          @id @default(cuid())
  mateId    String
  actionId  String
  mate      Mate            @relation(fields: [mateId], references: [id])
  type      AvailableAction @relation(fields: [actionId], references: [id])
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model AvailableTrigger {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Triggers  Trigger[]
}

model AvailableAction {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Actions   Action[]
}

model MateRun {
  id            String         @id @default(cuid())
  mateId        String
  mate          Mate           @relation(fields: [mateId], references: [id])
  metadata      Json
  mateRunOutbox MateRunOutbox?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model MateRunOutbox {
  id        String   @id @default(cuid())
  mateRunId String   @unique
  mateRun   MateRun  @relation(fields: [mateRunId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
